<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/colortitle"
        android:layout_below="@id/toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:text="Color Theme"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginLeft="5dp" />

    <LinearLayout
        android:id="@+id/colors"
        android:layout_below="@id/colortitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_red"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FF595E"
            android:layout_margin="5dp" />

        <Button
            android:id="@+id/btn_yellow"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#FFCA3A"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn_green"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#8AC926"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn_blue"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1982C4"
            android:layout_margin="5dp"/>

        <Button
            android:id="@+id/btn_purple"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#6A4C93"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Login"
        android:layout_below="@id/colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Login / Register"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:id="@+id/botnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_Tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_home"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Tasks"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

        <ImageButton
            android:id="@+id/btn_Notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_notes"
            android:background="@color/colorPrimary"
            android:text="Notes"
            android:textColor="#FFFFFF"
            android:textSize="18sp"/>

    </LinearLayout>

</RelativeLayout>